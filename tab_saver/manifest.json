{
  "manifest_version": 2,

  "name": "Tab Saver",
  "description": "Save Name and URL of Currently Open Tabs to a .json file",
  "version": "1.0",

  "browser_action": {
    "default_icon": "./ico/icon.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["/js/jquery.min.js", "/js/background.js"],
    "persistent": true
  },

  "content_scripts": [{
      "js": [ "/js/jquery.min.js", "/js/popup.js"],
      "matches": [ "http://*/*", "https://*/*"]
    }],

  "permissions": [
    "activeTab",
    "tabs",
    "background",
    "storage",
    "notifications"
  ]
}
